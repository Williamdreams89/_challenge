{
  "builds": [
    {
      "src": "build_files.sh",
      "use": "@vercel/build-script",
      "config": {
        "commands": [
          "python -m venv venv",  # Create a virtual environment (optional)
          "source venv/bin/activate",  # Activate virtual environment (optional)
          "pip install -r requirements.txt"  # Install dependencies
        ]
      }
    }
  ],
  "functions": { "prebuild": "build_files.sh" }  # Run build script before deployment
}
